{
    "round_timeout": {
        "description": "每轮答题超时时间（秒）",
        "type": "int",
        "default": 60,
        "hint": "超时后自动公布答案并进入下一轮"
    },
    "max_rounds": {
        "description": "每局最大轮数",
        "type": "int",
        "default": 10,
        "hint": "达到轮数后自动结束游戏"
    },
    "min_players": {
        "description": "最少参与人数",
        "type": "int",
        "default": 1,
        "hint": "达到人数才能开始游戏"
    },
    "max_players": {
        "description": "最多参与人数",
        "type": "int",
        "default": 20,
        "hint": "达到上限后无法再加入"
    },
    "voice_send_timeout": {
        "description": "语音发送超时时间（秒）",
        "type": "int",
        "default": 15,
        "hint": "超时后自动降级为发送音频链接"
    },
    "admin_ids": {
        "description": "管理员QQ号列表",
        "type": "list",
        "default": [],
        "hint": "管理员可强制结束游戏、公布答案"
    },
    "cache_path": {
        "description": "音频缓存清理路径",
        "type": "string",
        "default": "",
        "hint": "留空则默认为插件data目录，可填写go-cqhttp的cache目录路径"
    },
    "cache_cleanup_hours": {
        "description": "缓存清理间隔（小时）",
        "type": "int",
        "default": 48,
        "hint": "定时清理缓存文件，0为禁用清理"
    }
}
